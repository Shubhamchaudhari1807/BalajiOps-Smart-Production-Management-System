@model IEnumerable<Balaji_ERP_Solution.DataContext.SpPerson_Result>
@{ 
    Layout = null;
}
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonContact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonContact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PersonId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PersonId })
        </td>
    </tr>
}

</table>
